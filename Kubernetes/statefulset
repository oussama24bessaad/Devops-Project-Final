apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: DB
  spec:
  serviceName: "mongo"
  replicas: 1 
  selector:
    matchLabels:
      app: mongo
  template: 
    metadata:
      labels:
        app: mongo
    spec:
      containers:
      - name: mongo
        image: mongo
        ports:
        - containerPort: 27017
          name: DB
        volumeMounts:
        - name: www
          mountPath: /usr/share/mongo/html
